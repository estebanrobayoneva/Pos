<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :nombre %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre del producto", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :cantidad %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :cantidad, class: "form-control", placeholder: "Nombre del producto", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :valor_unitario %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :valor_unitario, class: "form-control", placeholder: "Nombre del producto", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

 

