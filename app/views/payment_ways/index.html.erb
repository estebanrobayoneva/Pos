<p id="notice"><%= notice %></p>

<h1>Payment Ways</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_ways.each do |payment_way| %>
      <tr>
        <td><%= payment_way.nombre %></td>
        <td><%= link_to 'Show', payment_way %></td>
        <td><%= link_to 'Edit', edit_payment_way_path(payment_way) %></td>
        <td><%= link_to 'Destroy', payment_way, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

